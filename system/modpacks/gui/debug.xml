<?xml version="1.0" encoding="UTF-8"?>
<Window id="debug" min-width="250" min-height="125" left="-260" top="10" title="Debug" resize="false">
  <Notebook id="notebook">
    <page>
      <tab>
        <Label>Version</Label>
      </tab>
      <content>
        <Box orientation="vertical">
          <Alignment scale_y="0">
            <Box>
              <Alignment scale_x="0.25">
                <Image>dev/concicon.png</Image>
              </Alignment>
              <Alignment scale_x="0.75">
                <Box orientation="vertical">
                  <Alignment scale_x="0">
                    <Label>Concordia</Label>
                  </Alignment>
                  <Alignment scale_x="0">
                    <Label>0.0.3 "Picasso"</Label>
                  </Alignment>
                </Box>
              </Alignment>
            </Box>
          </Alignment>
          <Box orientation="vertical">
            <Label>(c) 2017 ne0ndrag0n</Label>
          </Box>
        </Box>
      </content>
    </page>
    <page>
      <tab>
        <Label id="view">View</Label>
      </tab>
      <content>
        <Box orientation="vertical" spacing="5.0">
          <Frame title="View">
            <Box id="control" orientation="horizontal" spacing="5.0">
              <Button id="rot_l">&lt;</Button>
              <Button id="rot_r">&gt;</Button>
              <Button id="zoom_in">+</Button>
              <Button id="zoom_out">-</Button>
            </Box>
          </Frame>
          <Button id="toggle_table">Toggle Table</Button>
        </Box>
      </content>
    </page>
    <page>
      <tab>
        <Label>Options</Label>
      </tab>
      <content>
        <Box id="options" orientation="vertical" spacing="5.0">
          <Button id="animate1">play anim</Button>
          <Frame title="Test Actions">
            <Box spacing="5.0">
              <Button id="ta1">#1</Button>
              <Button id="ta2">#2</Button>
            </Box>
          </Frame>
          <Frame id="inpframe" title="Input">
            <Box id="inputs" spacing="5.0">
              <Entry id="inp1"></Entry>
              <Button id="apply" min-width="75" expand="false">Apply</Button>
            </Box>
          </Frame>
        </Box>
      </content>
    </page>
  </Notebook>
</Window>

<Window id="tablewindow" title="Additional Tests" min-width="500" visible="false">
  <Box id="tablebox" orientation="vertical" spacing="5">
    <ComboBox id="combo">
      <item>spam</item>
      <item>meat</item>
      <item>eggs</item>
    </ComboBox>
    <Table id="table">
      <row>
        <Button id="foo" class="intable">Foo</Button>
      </row>
      <row>
      	<Button id="bar" class="intable">Bar</Button>
      </row>
      <row>
      	<Button class="intable">Baz</Button>
      </row>
      <row>
        <Button id="col3" colspan="3" class="intable">column_span</Button>
      </row>
    </Table>
  </Box>
</Window>
