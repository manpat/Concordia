<?xml version="1.0" encoding="UTF-8"?>
<Window id="debug" class="transparent" min-width="250" min-height="125" left="viewport_x - 260" top="10" title="Debug" resize="false">
  <Notebook id="notebook">
    <page>
      <tab>
        <Label>Version</Label>
      </tab>
      <content>
        <Box orientation="vertical">
          <Alignment scale_y="0">
            <Box>
              <Alignment scale_x="0.25">
                <Image>dev/concicon.png</Image>
              </Alignment>
              <Alignment scale_x="0.75">
                <Box orientation="vertical">
                  <Alignment scale_x="0">
                    <Label>Concordia</Label>
                  </Alignment>
                  <Alignment scale_x="0">
                    <Label>0.0.3 "Picasso"</Label>
                  </Alignment>
                </Box>
              </Alignment>
            </Box>
          </Alignment>
          <Box orientation="vertical">
            <Label>(c) 2017 ne0ndrag0n</Label>
          </Box>
        </Box>
      </content>
    </page>
    <page>
      <tab>
        <Label>Options</Label>
      </tab>
      <content>
        <Box id="options" orientation="vertical" spacing="5.0">
          <Button id="bb_debug_gc">Run Garbage Collector</Button>
          <Button id="bb_debug_print_ram_usage">Print Lua RAM Usage</Button>
          <Button id="bb_debug_toggle_console">Toggle Console</Button>
        </Box>
      </content>
    </page>
  </Notebook>
</Window>
