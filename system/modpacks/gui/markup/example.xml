<?xml version="1.0" encoding="UTF-8"?>

<!-- this template -->
<template as="bb:window">
  <group class="bb-window-base">
    <group class="bb-window-titlebar">
      <text template-attr-alias="title"></text>
    </group>
    <group class="bb-window-closebar">
      <text>X</text>
    </group>
    <group class="bb-window-contents" template-child-alias="contents">

    </group>
  </group>
</template>

<!-- used as -->
<bb:window class="demo" title="Debug">
  <contents class="about-screen-grid">
    <image>dev/concicon.png</image>
    <text>
      Concordia v0.0.3 "Picasso"
      (c) ne0ndrag0n 2015-2018
    </text>
  </contents>
</bb:window>

<!-- expands to -->
